<Page x:Class="БД_АВТОРИЗАЦИЯ.Авторизация"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:БД_АВТОРИЗАЦИЯ"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <!-- Frame для отображения других страниц -->
        <Frame x:Name="SecondFrame"  NavigationUIVisibility="Hidden" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <!-- StackPanel для элементов авторизации -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Логин:" Margin="0,0,0,5" FontSize="20" HorizontalAlignment="Center"/>
            <TextBox x:Name="LoginTextBox" Height="30" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль:" Margin="0,0,0,5" FontSize="20" HorizontalAlignment="Center"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Width="200" Margin="0,0,0,10"/>

            <Button Content="Войти" Height="50" Width="200" Margin="0,30,0,10" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
